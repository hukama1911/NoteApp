<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.UpdateDataBukuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8sp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Buku"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etEditJudul"
            android:layout_width="377dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="26sp"
            android:background="#F8F2F2"
            android:ems="10"
            android:gravity="center|start"
            android:hint="Judul"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#121212" />

        <EditText
            android:id="@+id/etEditPenulis"
            android:layout_width="377dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:background="#F8F2F2"
            android:ems="10"
            android:hint="Penulis"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#121212" />

        <EditText
            android:id="@+id/etEditIsiBuku"
            android:layout_width="376dp"
            android:layout_height="89dp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:background="#F8F2F2"
            android:ems="10"
            android:hint="Isi"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="#121212" />

        <ImageView
            android:id="@+id/btnEditBuku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_marginTop="20sp"
            app:srcCompat="@drawable/baseline_edit_24" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>